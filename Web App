    <script>
        // Update current time
        function updateTime() {
            const now = new Date();
            const options = { 
                weekday: 'long', 
                year: 'numeric', 
                month: 'long', 
                day: 'numeric',
                hour: '2-digit',
                minute: '2-digit'
            };
            document.getElementById('currentTime').textContent = now.toLocaleDateString('vi-VN', options);
        }

        // Toggle report links visibility
        function toggleLinks(reportType) {
            const links = document.getElementById(reportType + '-links');
            const allLinks = document.querySelectorAll('.report-links');
            
            // Hide all other links
            allLinks.forEach(link => {
                if (link.id !== reportType + '-links') {
                    link.style.display = 'none';
                }
            });
            
            // Toggle current links
            if (links.style.display === 'none' || !links.style.display) {
                links.style.display = 'flex';
            } else {
                links.style.display = 'none';
            }
        }

        // Handle report link clicks
        function openReport(event, reportName) {
            event.stopPropagation();
            
            // Show loading state
            const link = event.target;
            const originalText = link.textContent;
            link.innerHTML = '<span class="loading"></span> ƒêang t·∫£i...';
            
            // Simulate loading (replace with actual URL)
            setTimeout(() => {
                link.textContent = originalText;
                alert(`ƒêang m·ªü: ${reportName}\n\nL∆∞u √Ω: Thay th·∫ø '#' b·∫±ng URL b√°o c√°o th·ª±c t·∫ø c·ªßa b·∫°n`);
                
                // In th·ª±c t·∫ø, b·∫°n s·∫Ω s·ª≠ d·ª•ng:
                // window.open('URL_BAO_CAO_THUC_TE', '_blank');
            }, 1000);
        }

        // Initialize
        updateTime();
        setInterval(updateTime, 60000); // Update every minute

        // Hide all links initially
        document.querySelectorAll('.report-links').forEach(links => {
            links.style.display = 'none';
        });

        // Add smooth scroll behavior
        document.documentElement.style.scrollBehavior = 'smooth';
    </script>
